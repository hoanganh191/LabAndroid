<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#B7F08051"
            android:text="Nhập Tên: "
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:hint="Nhập Dữ Liệu"
            android:id="@+id/edtNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnNhap"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Nhập" />

    <TextView
        android:id="@+id/tvKq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#831668E4"
        android:text="Click để hiển thị vị trí và giá trị bạn chọn"
        android:textColor="#1E0BEB"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

</LinearLayout>